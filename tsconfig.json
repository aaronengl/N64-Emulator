{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015.promise",
      "dom",
      "es2015"
    ],
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}